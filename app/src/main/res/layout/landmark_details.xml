<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="bottom|center"
    android:layout_marginBottom="-20dp"
    android:background="@drawable/round_edit_text">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="349dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="15dp"
            android:src="@drawable/line"></ImageView>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp">

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_baseline_close_24"
                android:backgroundTint="@color/color_3" />
        </LinearLayout>

        <TextView
            android:id="@+id/field_NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:paddingHorizontal="5dp"
            android:singleLine="false"
            android:text="Landmark Name"
            android:textColor="@color/black"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/field_ADDRESS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:paddingHorizontal="5dp"
            android:singleLine="false"
            android:text=""
            android:textColor="@color/quantum_grey500"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/field_PHONE_NUMBER"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textColor="@color/quantum_grey500"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/field_RATING"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:paddingHorizontal="5dp"
            android:text=""
            android:textColor="@color/color_2"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/field_BUSINESS_STATUS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:text=""
                android:textColor="@color/color_1"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/field_WEBSITE_URI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginHorizontal="5dp"
                android:text=""
                android:textColor="@color/color_3"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_button_1"
                android:text="Directions"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginStart="120dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_button">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_star_24"
                    android:backgroundTint="@color/color_3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>